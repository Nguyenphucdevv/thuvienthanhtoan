<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập</title>
    <link rel="icon" type="image/jpeg" href="/images/thuvienavt.jpg" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/dangnhap.css" />
    <style>
      /* Hiệu ứng nền 3D */
      body {
        background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        min-height: 100vh;
        position: relative;
        overflow: hidden;
      }
      .bg-3d {
        position: absolute;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 0;
        pointer-events: none;
      }
      .login-container {
        position: relative;
        z-index: 1;
      }
      .book-icon {
        position: absolute;
        width: 50px;
        height: 50px;
        opacity: 0.15;
      }
      .top-left {
        top: -10px;
        left: -10px;
      }
      .top-right {
        top: -10px;
        right: -10px;
      }
      .bottom-left {
        bottom: -10px;
        left: -10px;
      }
      .bottom-right {
        bottom: -10px;
        right: -10px;
      }
      /* Kiểu dáng cho logo */
      .logo-box {
        position: absolute;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
        z-index: 2;
      }
      .logo-img {
        width: 100px;
        height: auto;
        border-radius: 50%;
      }
      .logo-text {
        margin-top: 10px;
        font-size: 18px;
        font-weight: bold;
        color: #333;
      }
    </style>
  </head>
  <body>
    <!-- Logo cá nhân và tên -->
    <div class="logo-box">
      <div class="logo-text">Nguyễn Văn Phúc</div>
    </div>
    <canvas class="bg-3d"></canvas>
    <div
      class="container d-flex justify-content-center align-items-center"
      style="min-height: 100vh"
    >
      <div
        class="login-container shadow-lg p-4 rounded-4 bg-white book-3d"
        style="max-width: 400px; width: 100%"
      >
        <!-- 4 góc icon sách -->
        <img src="/images/bonka.jpg " class="book-icon top-left" alt="Book" />
        <img
          src="/images/book-icon.png"
          class="book-icon top-right"
          alt="Book"
        />
        <img
          src="/images/book-icon.png"
          class="book-icon bottom-left"
          alt="Book"
        />
        <img
          src="/images/book-icon.png"
          class="book-icon bottom-right"
          alt="Book"
        />
        <h2 class="text-center mb-4 text-primary">Đăng nhập</h2>
        <p class="text-center text-muted mb-4">
          <small>Vai trò 1: Admin | Vai trò 2: Người dùng</small>
        </p>
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="tai_khoan" class="form-label">Tài khoản:</label>
            <input
              type="text"
              id="tai_khoan"
              name="tai_khoan"
              class="form-control"
              placeholder="Nhập tài khoản"
              required
            />
          </div>
          <div class="mb-3">
            <label for="mat_khau" class="form-label">Mật khẩu:</label>
            <input
              type="password"
              id="mat_khau"
              name="mat_khau"
              class="form-control"
              placeholder="Nhập mật khẩu"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary w-100 mb-2">
            <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
          </button>
        </form>
        <a href="/register" class="btn btn-success w-100 mb-2">
          <i class="bi bi-person-plus me-2"></i>Đăng ký
        </a>
        <a href="/trangchinh" class="btn btn-warning w-100">
          <i class="bi bi-house me-2"></i>Trang Chính
        </a>
      </div>
    </div>
    <!-- Hiệu ứng nền 3D bằng Canvas -->
    <script>
      const canvas = document.querySelector(".bg-3d");
      const ctx = canvas.getContext("2d");
      function resize() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
      }
      window.addEventListener("resize", resize);
      resize();
      // Vẽ các hình cầu chuyển động
      let balls = [];
      for (let i = 0; i < 40; i++) {
        balls.push({
          x: Math.random() * canvas.width,
          y: Math.random() * canvas.height,
          r: Math.random() * 30 + 20,
          dx: (Math.random() - 0.5) * 1.2,
          dy: (Math.random() - 0.5) * 1.2,
          color: `rgba(${Math.floor(Math.random() * 200 + 55)},${Math.floor(
            Math.random() * 200 + 55
          )},${Math.floor(Math.random() * 200 + 55)},0.25)`,
        });
      }
      function draw() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        for (let b of balls) {
          ctx.beginPath();
          ctx.arc(b.x, b.y, b.r, 0, 2 * Math.PI);
          ctx.fillStyle = b.color;
          ctx.shadowColor = b.color;
          ctx.shadowBlur = 30;
          ctx.fill();
          b.x += b.dx;
          b.y += b.dy;
          if (b.x < 0 || b.x > canvas.width) b.dx *= -1;
          if (b.y < 0 || b.y > canvas.height) b.dy *= -1;
        }
        requestAnimationFrame(draw);
      }
      draw();
    </script>
  </body>
</html>
