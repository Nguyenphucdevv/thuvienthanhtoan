<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cập Nhật Thể Loại</title>
    <link rel="icon" type="image/jpeg" href="/images/thuvienavt.jpg" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/udtheloai.css" />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
          <a class="navbar-brand" href="/admin">
            <i class="bi bi-bookmark me-2"></i>Quản lý Thể Loại
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navMain"
            aria-controls="navMain"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navMain">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/admin">
                  <i class="bi bi-house-door"></i> Trang chủ
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/thu_vien">
                  <i class="bi bi-building"></i> Thư viện
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/admin/the_loai">
                  <i class="bi bi-bookmark"></i> Thể loại
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/sach">
                  <i class="bi bi-book"></i> Sách
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/muon_sach">
                  <i class="bi bi-calendar-check"></i> Mượn Sách
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-warning fw-bold" href="/">
                  <i class="bi bi-geo-alt-fill"></i> Xem Bản đồ
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="container py-4">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/admin"><i class="bi bi-house-door"></i> Trang chủ</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/admin/the_loai">
              <i class="bi bi-bookmark"></i> Thể loại
            </a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            <i class="bi bi-pencil-square"></i> Cập nhật thông tin
          </li>
        </ol>
      </nav>

      <!-- Form Card -->
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
              <h5 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>Cập Nhật Thể Loại
              </h5>
            </div>
            <div class="card-body">
              <form
                method="POST"
                action="/admin/the_loai/update/<%= the_loai.ID_theloai %>"
                id="updateTheLoaiForm"
                onsubmit="return validateForm()"
              >
                <div class="row g-3">
                  <!-- ID Thể Loại (Read-only) -->
                  <div class="col-12">
                    <div class="alert alert-info">
                      <i class="bi bi-info-circle me-2"></i>
                      <strong>Mã thể loại:</strong> #<%= the_loai.ID_theloai %>
                    </div>
                  </div>

                  <!-- Tên Thể Loại -->
                  <div class="col-12">
                    <label for="Ten_theloai" class="form-label">
                      <i class="bi bi-bookmark me-1"></i>Tên Thể Loại
                      <span class="text-danger">*</span>
                    </label>
                    <input
                      type="text"
                      id="Ten_theloai"
                      name="Ten_theloai"
                      class="form-control"
                      value="<%= the_loai.Ten_theloai %>"
                      placeholder="Nhập tên thể loại"
                      required
                    />
                    <small class="form-text text-muted">
                      <i class="bi bi-info-circle"></i> Ví dụ: Văn học, Khoa
                      học, Lịch sử...
                    </small>
                  </div>

                  <!-- ID Thư Viện -->
                  <div class="col-12">
                    <label for="ID_thuvien" class="form-label">
                      <i class="bi bi-building me-1"></i>ID Thư Viện
                      <span class="text-danger">*</span>
                    </label>
                    <input
                      type="number"
                      id="ID_thuvien"
                      name="ID_thuvien"
                      class="form-control"
                      value="<%= the_loai.ID_thuvien %>"
                      placeholder="Nhập ID thư viện"
                      min="1"
                      required
                    />
                    <small class="form-text text-muted">
                      <i class="bi bi-info-circle"></i> ID thư viện sở hữu thể
                      loại này
                    </small>
                  </div>

                  <!-- Tên Thư Viện (Nếu có) -->
                  <% if (the_loai.ten_thuvien) { %>
                  <div class="col-12">
                    <div class="alert alert-light border">
                      <strong>Thư viện hiện tại:</strong> <%=
                      the_loai.ten_thuvien %>
                    </div>
                  </div>
                  <% } %>

                  <!-- Action Buttons -->
                  <div class="col-12 mt-3">
                    <div class="d-flex gap-2 justify-content-end">
                      <a href="/admin/the_loai" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i>Hủy
                      </a>
                      <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Cập Nhật
                      </button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>

          <!-- Thông tin hướng dẫn -->
          <div class="card shadow-sm mt-3">
            <div class="card-body">
              <h6 class="card-title">
                <i class="bi bi-lightbulb me-2"></i>Hướng Dẫn
              </h6>
              <ul class="mb-0">
                <li>Tên thể loại phải có ít nhất 2 ký tự</li>
                <li>ID thư viện phải là số dương và tồn tại trong hệ thống</li>
                <li>Thể loại này sẽ thuộc về thư viện được chọn</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>

    <!-- Form Validation Script -->
    <script>
      function validateForm() {
        const tenTheloai = document.getElementById("Ten_theloai").value.trim();
        const idThuvien = document.getElementById("ID_thuvien").value;

        if (!tenTheloai) {
          alert("Vui lòng nhập tên thể loại!");
          return false;
        }

        if (tenTheloai.length < 2) {
          alert("Tên thể loại phải có ít nhất 2 ký tự!");
          return false;
        }

        if (!idThuvien || idThuvien <= 0) {
          alert("ID thư viện phải là số dương!");
          return false;
        }

        return true;
      }

      // Hiển thị thông báo thành công (nếu có)
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.has("success")) {
        const alertDiv = document.createElement("div");
        alertDiv.className =
          "alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3";
        alertDiv.style.zIndex = "9999";
        alertDiv.innerHTML = `
          <i class="bi bi-check-circle me-2"></i>
          Cập nhật thể loại thành công!
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        document.body.appendChild(alertDiv);

        // Auto dismiss sau 3 giây
        setTimeout(() => {
          alertDiv.remove();
        }, 3000);
      }

      // Hiển thị thông báo lỗi (nếu có)
      if (urlParams.has("error")) {
        const errorMsg = urlParams.get("error");
        const alertDiv = document.createElement("div");
        alertDiv.className =
          "alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3";
        alertDiv.style.zIndex = "9999";
        alertDiv.innerHTML = `
          <i class="bi bi-exclamation-triangle me-2"></i>
          ${errorMsg}
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        document.body.appendChild(alertDiv);

        // Auto dismiss sau 5 giây
        setTimeout(() => {
          alertDiv.remove();
        }, 5000);
      }
    </script>
  </body>
</html>
